<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/v_backGround"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_input_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_inputStarter"
        android:layout_width="16dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/spacer_primary_small"
        app:layout_constraintBottom_toBottomOf="@id/et_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/et_input"
        style="@style/Text.Primary.Hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:maxLines="1"
        android:background="@android:color/transparent"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/v_iconDelimiter"
        app:layout_constraintStart_toEndOf="@id/v_inputStarter"
        app:layout_constraintTop_toTopOf="@id/v_inputStarter"
        tools:text="asdsasdad" />

    <View
        android:id="@+id/v_iconDelimiter"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="@id/v_inputStarter"
        app:layout_constraintEnd_toStartOf="@id/btn_checked"
        app:layout_constraintTop_toTopOf="@id/v_inputStarter" />

    <ImageButton
        android:id="@+id/btn_checked"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/spacer_active_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/v_backGround"
        app:srcCompat="@drawable/ic_check"
        tools:ignore="ContentDescription"
        android:clickable="false"/>
</androidx.constraintlayout.widget.ConstraintLayout>