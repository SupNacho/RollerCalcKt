<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/bg_main</item>
    </style>

    <style name="SplashScreen" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="Text" parent="TextAppearance.AppCompat"/>
    <style name="Input" parent="Widget.AppCompat.EditText"/>
    <style name="Text.Light" parent="Text">
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>
    <style name="Text.Primary" parent="Text">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="Text.Accent" parent="Text">
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="Text.Dark" parent="Text">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <style name="Input.Primary" parent="Input">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="Input.PrimaryDark" parent="Input">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <style name="Input.Dark" parent="Input">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <style name="Text.Light.Name">
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="Text.Light.Params">
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">6</item>
        <item name="android:layout_gravity">start</item>
    </style>
    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Text.Primary.CalculationLength">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Text.Primary.Hint">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Text.Dark.Hint">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Text.Accent.Hint">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Text.Dark.CalculationWeight">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Input.Dark.Input">
        <item name="android:textSize">20sp</item>
        <item name="background">@android:color/transparent</item>
    </style>
    <style name="Input.Primary.Input">
        <item name="android:textSize">20sp</item>
        <item name="background">@android:color/transparent</item>
    </style>
    <style name="Input.PrimaryDark.Input">
        <item name="android:textSize">20sp</item>
        <item name="background">@android:color/transparent</item>
    </style>
</resources>
